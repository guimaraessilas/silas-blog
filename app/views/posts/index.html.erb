<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div>
        <%= raw(post.body).truncate(358) %>
      </div>
      <div class="text-center">
        <%= link_to "Continuar...", post_path(post) %>
      </div>
      <% if admin_signed_in? %>
        <%= link_to "Mostrar", post_path(post), class: "btn btn-primary" %>
        <%= link_to "Editar", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Deletar", post_path(post), class: "btn btn-danger", data: {:confirm => "Tem certeza?"}, method: :delete %>
      <% end %>
      <hr />
    </div>
    <% end %>
  </div>
</div>