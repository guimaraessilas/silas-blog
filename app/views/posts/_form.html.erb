<%= simple_form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@post.errors.count, "erro")} ao tentar salvar a publicação." %>
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Título: "%>
    <%= f.input :title, class: "form-control", label: false %>
  </div>

  <div class="form-group">
    <%= f.label "Conteúdo: "%>
    <%= f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control", label: false %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>